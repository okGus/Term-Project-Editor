{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++-9 -std=c++14 -O3 -g main.cpp Node.h PrecondViolatedExcep.h PrecondViolatedExcep.cpp LinkedList.h ListInterface.h Editor.h Editor.cpp Point.h Point.cpp -lX11 -lncurses -o miniEditor",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}